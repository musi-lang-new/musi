{
  "name": "vscode-musi",
  "displayName": "Musi",
  "description": "Musi language support",
  "version": "0.1.0",
  "author": {
    "name": "xsyetopz"
  },
  "license": "MIT",
  "private": true,
  "publisher": "xsyetopz",
  "homepage": "https://github.com/musi-lang/musi",
  "repository": {
    "type": "git",
    "url": "https://github.com/musi-lang/musi.git"
  },
  "bugs": {
    "url": "https://github.com/musi-lang/musi/issues"
  },
  "keywords": [
    "Musi"
  ],
  "categories": [
    "Formatters",
    "Linters",
    "Programming Languages"
  ],
  "icon": "logo.png",
  "galleryBanner": {
    "color": "#cc0000",
    "theme": "dark"
  },
  "readme": "README.md",
  "main": "./out/extension.js",
  "engines": {
    "vscode": "^1.75.0"
  },
  "contributes": {
    "languages": [
      {
        "id": "musi",
        "aliases": [
          "Musi",
          "musi"
        ],
        "extensions": [
          ".ms"
        ],
        "configuration": "language-configuration.json",
        "icon": {
          "light": "logo.png",
          "dark": "logo.png"
        }
      },
      {
        "id": "musi-injection",
        "aliases": [
          "musi-inj"
        ]
      }
    ],
    "grammars": [
      {
        "language": "musi",
        "scopeName": "source.musi",
        "path": "syntaxes/musi.tmLanguage.json"
      },
      {
        "language": "musi-injection",
        "path": "syntaxes/musi_codeblock.tmLanguage.json",
        "scopeName": "markdown.musi.codeblock",
        "injectTo": [
          "text.html.markdown"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.musi": "musi"
        }
      }
    ],
    "snippets": [
      {
        "language": "musi",
        "path": "snippets/musi_snippets.json"
      }
    ]
  },
  "scripts": {
    "prepublish": "bun run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package --no-dependencies"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.0",
    "@types/bun": "^1.3.1",
    "@types/vscode": "^1.75.0",
    "@vscode/vsce": "^3.6.2",
    "npm": "^11.6.2",
    "typescript": "^5.9.3"
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "@vscode/vsce-sign",
    "keytar"
  ]
}
